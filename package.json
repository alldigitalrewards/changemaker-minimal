{
  "name": "changemaker",
  "version": "0.1.0",
  "description": "Changemaker application built with Next.js, Prisma, and Supabase.",
  "private": true,
  "scripts": {
    "dev": "pnpm supabase:ensure && pnpm prisma:generate && next dev",
    "dev:only": "next dev",
    "supabase:ensure": "node scripts/ensure-supabase.js",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "build": "pnpm prisma:generate && next build",
    "start": "next start",
    "seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && pnpm seed",
    "db:push": "prisma db push && pnpm seed",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --name",
    "db:migrate:apply": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:status": "prisma migrate status",
    "db:migrate:prod": "node scripts/migrate-prod.js",
    "db:status:prod": "node scripts/status-prod.js",
    "db:seed:prod": "dotenv -e .env.production -- tsx scripts/seed-production.ts",
    "setup:local": "pnpm prisma:generate && pnpm db:migrate:apply && pnpm seed",
    "deploy:prod": "pnpm db:migrate:prod && pnpm prisma:generate && pnpm db:seed:prod",
    "fix:enrollment-status": "tsx scripts/migrate-enrollment-status.ts",
    "migrate:workspace-membership": "tsx scripts/run-membership-migration.ts",
    "backfill:memberships": "tsx scripts/backfill-memberships.ts",
    "test:membership": "tsx scripts/test-membership.ts",
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:dev": "ENV_FILE=.env.local BASE_URL=http://localhost:3000 playwright test tests/e2e",
    "test:e2e:prod": "BASE_URL=https://changemaker.im playwright test tests/e2e",
    "test:e2e:preview": "BASE_URL=https://preview.changemaker.im playwright test tests/e2e",
    "test:e2e:smoke:dev": "ENV_FILE=.env.local BASE_URL=http://localhost:3000 playwright test -g 'Approvals with multi-reward issuance'",
    "test:e2e:smoke:prod": "BASE_URL=https://changemaker.im playwright test -g 'Approvals with multi-reward issuance'",
    "test:e2e:smoke:preview": "BASE_URL=https://preview.changemaker.im playwright test -g 'Approvals with multi-reward issuance'",
    "test:ui": "playwright test --ui",
    "test:cucumber": "BASE_URL=${BASE_URL:-http://localhost:3000} cucumber-js -p default -c tests/e2e/cucumber.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.13",
    "@radix-ui/react-radio-group": "^1.2.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.7.0",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "frimousse": "^0.2.0",
    "lucide-react": "^0.510.0",
    "nanoid": "^5.0.9",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "nodemailer": "^6.9.14",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.1.0",
    "@playwright/test": "^1.55.0",
    "@supabase/supabase-js": "^2.57.0",
    "@tailwindcss/postcss": "^4.1.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "playwright": "^1.55.0",
    "prisma": "^6.15.0",
    "tailwindcss": "^4.1.6",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
